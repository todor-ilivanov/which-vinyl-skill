{
  "name": "which-vinyl-mcp",
  "version": "1.0.0",
  "description": "MCP server for vinyl recommendations using Spotify and Discogs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "setup": "tsx src/cli/setup.ts",
    "auth:spotify": "tsx src/cli/authenticate.ts spotify",
    "auth:discogs": "tsx src/cli/authenticate.ts discogs",
    "auth:all": "tsx src/cli/authenticate.ts all"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "keytar": "^7.9.0",
    "oauth-1.0a": "^2.2.6",
    "open": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  }
}
